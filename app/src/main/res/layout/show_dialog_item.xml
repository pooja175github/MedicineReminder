<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:id="@+id/cv"
    cardView:cardCornerRadius="2dp"
    android:layout_marginTop="24dp"
    cardView:cardElevation="5dp"
    cardView:cardBackgroundColor="@android:color/white"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminderlist_title"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingTop="10dp"

            android:layout_alignParentLeft="true"
            android:text="ITR Due Date"
            android:textSize="20sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminderlist_type"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="ITR"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:layout_below="@+id/reminderlist_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminderlist_flag"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Daily"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:layout_below="@+id/reminderlist_title"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>