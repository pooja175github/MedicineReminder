<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/cv"
        cardView:cardCornerRadius="2dp"
        cardView:cardElevation="5dp"
        cardView:cardBackgroundColor="@android:color/white"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderlist_status"
                android:text="Active"
                android:padding="5dp"
                android:clickable="false"
                android:textColor="@android:color/white"
                android:background="@color/material_green_900"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:layout_alignParentTop="true"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderlist_date"
                android:text="18/12/1993"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderlist_title"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="30dp"

                android:layout_alignParentLeft="true"
                android:text="ITR Due Date"
                android:textSize="20sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderlist_type"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="ITR"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:layout_below="@+id/reminderlist_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderlist_flag"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Daily"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp"
                android:layout_below="@+id/reminderlist_title"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
